{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                  "type": "websocket",
                  "endpoint": {
                    "type": "tcp",
                    "port": 8082
                  }
                }
            ]
        },
        {
            "type": "guest",
            "executable": "node",
            "arguments": [
                "main.js"
            ],
            "options": {
                "workdir": "../server",
                "watch": {
                    "directories": [
                        "../server"
                    ],
                    "action": "restart"
                }
            }
        }
    ]
}
